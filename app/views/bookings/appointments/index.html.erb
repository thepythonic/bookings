<ul>
  <li>
    <%= reservables_links %>
  </li>
  <% if current_user.id == @reservable.id %>
    <li>
      <%= link_to "My Time Slots", my_time_slots_path %>
    </li>
  <% elsif current_user.is_admin? %>
    <% @reservables.each do |reservable| %>
    <li>
      <%= link_to "#{reservable.email}", reservable_appointments_path(@reservable) %>
    </li>
    <% end %>
  <% end %>
</ul>

<div id="calendar-contianer">
  <div id="template_form"></div> 
  <div id="calendar"></div>
</div>


<script type="text/javascript">
var config = {
  form: '<%=j render "form", locals: @appointment %>',
  minTime: '<%= Bookings.min_time %>',
  maxTime: '<%= Bookings.max_time %>',
  slotMinutes: <%= Bookings.slot_minutes %>,
  appointments_url: "<%=j reservable_appointments_slots_path(@reservable) %>",
  isCustomer: <%= current_user.is_customer? %>,
  customerID: "<%= current_user.is_customer? ? current_user.id : '' %>"
};
</script>

<%= javascript_include_tag "bookings/appointments" %>