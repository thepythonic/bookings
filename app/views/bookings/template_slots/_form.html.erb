<%= form_for(@template_slot, remote: true) do |f| %>
  <% if @template_slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template_slot.errors.count, "error") %> prohibited this template_slot from being saved:</h2>

      <ul>
      <% @template_slot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :day %><br>
    <%= f.text_field :day %>
  </div>
  <div class="field">
    <%= f.label :from_time %><br>
    <%= select_tag :from_time_hour, options_for_select(hours_span_options) %>
    <%= select_tag :from_time_minute, options_for_select(minutes_span_options) %>
  </div>
  <div class="field">
    <%= f.label :to_time %><br>
     <%= select_tag :to_time_hour, options_for_select(hours_span_options) %>
     <%= select_tag :to_time_minute, options_for_select(minutes_span_options) %>
  </div>
  <div class="field">
    <%= f.label :recurring %><br>
    <%= f.select :recurring,  week_recurring_options %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
