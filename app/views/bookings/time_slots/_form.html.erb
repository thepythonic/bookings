  </div>
  <div class="field">
    <%= f.label :to_time %><br>
     <%= select_tag :to_time_hour, options_for_select(hours_span_options) %>
     <%= select_tag :to_time_minute, options_for_select(minutes_span_options) %>
  </div>
  <div class="field">
    <%= f.label :recurring %><br>
    <%= f.select :recurring,  week_recurring_options %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
