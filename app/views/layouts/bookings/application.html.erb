<!DOCTYPE html>
<html>
<head>
  <title>Bookings</title>

  <%= stylesheet_link_tag    "bookings/application", media: "all" %>

  <%= javascript_include_tag "bookings/application" %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= csrf_meta_tags %>

</head>
<body>

<div id="form" class="reveal-modal"></div>

<div id="calendar"></div>

<script id="appointment-itemview" type="text/x-handlebars-template" >
  <div class="small-2">
    <a href="#" class="tiny button split">{{from}} - {{id}}</a>
  </div>
</script>

<script id="appointment-day" type="text/x-handlebars-template" >
</script>

<script id="appointment-edit" type="text/x-handlebars-template">
  <fieldset>
    <legend>Edit</legend>
    <div class="larg-9">
      <div class="large-4 columns">
        <label>From</label>
        <input id="from" class="fdatetimepicker" type="text" placeholder="from" value="{{from}}">
      </div>
      <div class="large-4 columns">
        <label>Duration</label>
        <input id="duration" type="text" placeholder="duration" value="{{duration}}">
      </div>
    </div>
    <div class="large-4 columns">
      <a class="tiny button split submit" href="#">Edit</a>
      <a class="close-reveal-modal close">&#215;</a>
    </div>
  </fieldset>
</script>

<script id="calendar-view-switch" type="text/x-handlebars-template">
  <div class="row">
    <ul class="button-group">
      <li><a href="#" class="small button week-view">Week</a></li>
      <li><a href="#" class="small button month-view">Month</a></li>
    </ul>
  </div>
</script>

<!-- CALENDAR -->
<script id="module-layout" type="text/x-handlebars-template">
  <div id="header-container" class="row">
    <div id="calendar-switcher" class="small-2"></div>
    <div id="module-header" class="small-12 columns"></div>  
  </div>
  <div id="module-content"></div>  
</script>

<script id="calendar-header" type="text/x-handlebars-template">
  <div class="row">
    <div class="small-5 small-centered columns">
      <div class="row">
        <div class="small-3 columns">
          <span class="prev text-right span-link">Previous</span>
        </div>
        <div class="small-6 columns text-center">{{{date_formatted}}}</div>
        <div class="small-3 columns">
          <span class="next span-link">Next</span>
        </div>
      </div>
    </div>
  </div> 
</script>

<script id="calendar-layout" type="text/x-handlebars-template">
  <table id="calendar-table" class="small-12">
    <thead id="calendar-table-header">
    </thead>
    <tbody id="calendar-table-content" style="height:100%">
    </tbody>
  </table>
</script>

<script id="header-itemview" type="text/x-handlebars-template">
    {{date_formatted_day}}
</script>

<script id="content-itemview" type="text/x-handlebars-template">
    <ul class="small-12">
    {{#each appointments.models }}  
      <li>
      <span class="span-link">{{from_formatted}}</span>
      </li>
    {{/each}}
    </ul>
</script>

<script id="calendar-month-layout" type="text/x-handlebars-template">
  <table id="calendar-table" class="small-12">
    <thead id="calendar-table-header">
      <tr>
        <td>Sun</td>
        <td>Mon</td>
        <td>Tue</td>
        <td>Wed</td>
        <td>Thu</td>
        <td>Fri</td>
        <td>Sat</td>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</script>

<script id="content-month-itemview" type="text/x-handlebars-template">
  {{#each models}}
  <td class=" {{#unless outOfRange }} span-link {{/unless}}">{{day_formatted}}</td>
  {{/each}}
</script>

  
</body>
</html>
