<!DOCTYPE html>
<html>
<head>
  <title>Bookings</title>

  <%= stylesheet_link_tag    "bookings/application", media: "all" %>
  <%= javascript_include_tag "bookings/application" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= csrf_meta_tags %>

</head>
<body>

<div id="content">
<%= yield %>
</div>
<div id="form" class="reveal-modal"></div>

<div id="calendar"></div>

<script id="appointment-itemview" type="text/x-handlebars-template" >
  <div class="small-2">
    <a href="#" class="tiny button split">{{from}} - {{id}}</a>
  </div>
</script>

<script id="appointment-day" type="text/x-handlebars-template" >
</script>

<script id="appointment-edit" type="text/x-handlebars-template">
  <fieldset>
    <legend>Edit</legend>
    <div class="larg-9">
      <div class="large-4 columns">
        <label>From</label>
        <input id="from" class="fdatetimepicker" type="text" placeholder="from" value="{{from}}">
      </div>
      <div class="large-4 columns">
        <label>Duration</label>
        <input id="duration" type="text" placeholder="duration" value="{{duration}}">
      </div>
    </div>
    <div class="large-4 columns">
      <a class="tiny button split submit" href="#">Edit</a>
      <a class="close-reveal-modal close">&#215;</a>
    </div>
  </fieldset>
</script>

<!-- CALENDAR -->
<script id="calendar-layout" type="text/x-handlebars-template">

  <div id="calendar-switch" class="row">
    <div class="small-3 small-offset-9 columns button-bar">
      <ul class="button-group">
        <li><a href="#" class="small button day-view">Day</a></li>
        <li><a href="#" class="small button week-view">Week</a></li>
        <li><a href="#" class="small button month-view">Month</a></li>
      </ul>
    </div>
  </div>  

  <div id="calendar-header"></div>  
  <div id="calendar-content"></div>  
</script>

<script id="calendar-day-header" type="text/x-handlebars-template">
  <div class="row">
    <div class="small-5 small-centered columns">
      <div class="row">
        <div class="small-3 columns">
          <a href="#" class="prev text-right">Previous</a>
        </div>
        <div class="small-6 columns text-center">{{date_formatted}}</div>
        <div class="small-3 columns">
          <a href="#" class="next">Next</a>
        </div>
      </div>
    </div>
  </div> 
</script>



<script id="calendar-month-header" type="text/x-handlebars-template">
  <div class="row">
    <div class="small-5 small-centered columns">
      <div class="row">
        <div class="small-3 columns">
          <a href="#" class="prev text-right">Previous</a>
        </div>
        <div class="small-6 columns text-center">{{date_formatted}}</div>
        <div class="small-3 columns">
          <a href="#" class="next">Next</a>
        </div>
      </div>
    </div>
  </div> 
</script>

<!-- DAY -->
<script id="day-itemview" type="text/x-handlebars-template">
  <div class="small-2 columns">
    {{date_formatted}}
  </div>
</script>

<!-- MONTH -->

<script id="month-itemview" type="text/x-handlebars-template">
  <div class="small-2 columns">
    {{date_formatted}}
  </div>
</script>

<!-- WEEK -->
<script id="calendar-week-header" type="text/x-handlebars-template">
  <div class="row">
    <div class="small-5 small-centered columns">
      <div class="row">
        <div class="small-3 columns">
          <a href="#" class="prev text-right">Previous</a>
        </div>
        <div class="small-6 columns text-center">{{date_formatted}}</div>
        <div class="small-3 columns">
          <a href="#" class="next">Next</a>
        </div>
      </div>
    </div>
  </div> 
</script>

<script id="week-view-layout" type="text/x-handlebars-template">
  <table>
    <thead id="week-header">
    </thead>
    <tbody id="week-content" style="height:100%">
    </tbody>
  </table>
</script>

<script id="week-header-itemview" type="text/x-handlebars-template">
    {{date_formatted}}
</script>

<script id="week-content-itemview" type="text/x-handlebars-template">
    {{from_formatted}}
</script>

</body>
</html>
