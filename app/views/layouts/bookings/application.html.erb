<!DOCTYPE html>
<html>
<head>
  <title>Bookings</title>
  
  <%= stylesheet_link_tag    "bookings/application", rel: 'stylesheet', media: "all" %>
  <%= stylesheet_link_tag    "bookings/application-print", rel: 'stylesheet', media: "print" %>

  <%= javascript_include_tag "bookings/application" %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= csrf_meta_tags %>

</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    
  <div class="user-info">
    <ul>
    <% if current_user %>
      <li>Current User: <span><%= current_user.email %></span></li>
      <li>
        <%= link_to("Logout", '/users/sign_out') %>
      </li>
    <%end%>
    <br />
    <ul>
      <% if current_user.is_admin? ||  current_user.is_reservable? %>
        <li>
          <%= link_to "Time Slots", time_slots_path %>
        </li>
      <% end %>
      <li>
        <%= reservables_links %>
      </li>
    </ul>
		
	</div>

	<div id="content">
  	<%= yield %>
  </div>
  
</body>
</html>
